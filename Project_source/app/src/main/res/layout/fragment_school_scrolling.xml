<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".User_interface.ScrollingFragments.SchoolScrollingFragment">

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/school_go_to_school"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/school_go_to_school" />

        <Button
            android:id="@+id/school_botat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/school_learn_yourself" />

        <Button
            android:id="@+id/school_buy_cheatbook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/school_buy_cheatbook" />

        <Button
            android:id="@+id/school_learn_from_student"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/school_learn_from_a_student" />

        <Button
            android:id="@+id/school_sign_up_in_an_online_school"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/school_sign_up_in_an_online_school" />

        <Button
            android:id="@+id/school_hire_a_good_tutor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/school_hire_a_good_tutor" />

        <Button
            android:id="@+id/school_study_with_uni_teacher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/school_study_with_uni_teacher" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_school_go_to_school"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="4dp"
                android:text="@string/school_study_with_uni_teacher"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/imageView11"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:text="-15"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/imageView10"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="-16"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/button"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_money"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/textView7"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_school_performance"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/textView6"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>